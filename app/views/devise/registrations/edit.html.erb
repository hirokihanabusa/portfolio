<div class="contents">
  <div>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <p style="font-size: 14px;">アカウントの編集</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="field-label">
        <%= f.label :email %> <i>(変更する場合は変更後のメールアドレスを入力)</i><br />
      </div>
        <%= f.email_field :email, :size=>"45", placeholder:" メールアドレス(必須)", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <div class="field-label">
        <%= f.label :password %> <i>(変更しない場合は空白のままにします)</i><br />
      </div>
      <%= f.password_field :password, :size=>"45", placeholder:" パスワード", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <div class="field-label">
        <%= f.label :password_confirmation %><br />
      </div>
      <%= f.password_field :password_confirmation, :size=>"45", placeholder:" パスワード確認", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <div class="field-label">
        <%= f.label :current_password %> <br />
      </div>
      <%= f.password_field :current_password, :size=>"45", placeholder: " 現在のパスワードを入力(必須)", autocomplete: "current-password" %>
    </div>

    <div class="actions_update">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Delete my account</h3>

  <p style="margin-bottom: 10px;">Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか?" }, method: :delete, class: "cancel_account" %></p>

  <div style="margin: 10px 0;">
    <%= link_to "Back", :back %>
  </div>
</div>
