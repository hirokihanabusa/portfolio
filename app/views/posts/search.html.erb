<div class="contents">
  <div class="search">
    <%= form_tag('/posts/search', method: :get, class: "search_form") do %>
      <input class="search__query" name="keyword" placeholder=" 倉庫名で検索" type="text" value="" autofocus="true"><%= submit_tag "検索", class: "btn_search" %>
    <% end %>
  </div>
  <div class="search_results">
    <% @posts.each do |post| %>
      <div class="info">
        <div class="post-name">
          <p class="warehouse-name"><%= post.warehouse_name %></p>
        </div>
        <div class="date-contributer">
          <div class="post-date">
            <p class="post-day">投稿日：<%= l post.post_date, format: :short %></p>
          </div>
          <div class="post-contributer">
            <p class="nickname">投稿者：<a href="/users/<%= post.user_id %>"><%= post.user.nickname %></a></p>
          </div>
        </div>
        <div class="address"> 
          <p class="warehouse_address">所在地：<%= post.address %></p>
        </div>
        <div>
          <%= link_to '口コミを表示', "/posts/#{post.id}", method: :get, class: :review %>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <%= link_to '編集', "/posts/#{post.id}/edit", method: :get, class: :edit %>
          <%= link_to '削除', "/posts/#{post.id}", method: :delete, class: :delete %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= paginate(@posts) %>
  </div>
</div>